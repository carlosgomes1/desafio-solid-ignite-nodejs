  "paths": {
    "/users": {
      "post": {
        "tags": ["Users"],
        "summary": "Create a user",
        "description": "Create a new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "user name sample",
                  "email": "solid@example.com"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "E-mail already exists"
          }
        }
      },
      "get": {
        "tags": ["Users"],
        "summary": "List all users",
        "description": "List all users when request user is admin",
        "parameters": [{
          "in": "header",
          "name": "user_id",
          "schema": {
            "type": "string"
          },
          "required": true
        }],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "admin": {
                        "type": "boolean"
                      },
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      },
                      "id": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "date"
                      },
                      "updated_at": {
                        "type": "date"
                      }
                    }
                  },
                  "example": {
                    "admin": false,
                    "id": "74dc0f41-9c96-4565-a0bb-32f285f71c26",
                    "name": "some name",
                    "email": "example@swagger.com",
                    "created_at": "2021-11-09T03:27:48.545Z",
                    "updated_at": "2021-11-09T03:27:48.545Z"
                  }
                }
              }
            }
          },
          "400": {
            "description": "User does not exists || User must be admin to list all users"
          }
        }
      }
    },
    "/users/{user_id}": {
      "get": {
        "tags": ["Users"],
        "summary": "List a user",
        "description": "List a user",
        "parameters": [{
          "in": "params",
          "name": "user_id",
          "schema": {
            "type": "string"
          },
          "required": true
        }],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "admin": {
                      "type": "boolean"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "id": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "date"
                    },
                    "updated_at": {
                      "type": "date"
                    }
                  },
                  "example": {
                    "admin": false,
                    "id": "74dc0f41-9c96-4565-a0bb-32f285f71c26",
                    "name": "some name",
                    "email": "example@swagger.com",
                    "created_at": "2021-11-09T03:27:48.545Z",
                    "updated_at": "2021-11-09T03:27:48.545Z"
                  }
                }
              }
            }
          },
          "400": {
            "description": "User does not exists"
          }
        }
      }
    },
    "/users/{user_id}/admin": {
      "patch": {
        "tags": ["Users"],
        "summary": "Turn a user an admin",
        "description": "Turn a user an admin",
        "parameters": [{
          "in": "params",
          "name": "user_id",
          "schema": {
            "type": "string"
          },
          "required": true
        }],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "admin": {
                      "type": "boolean"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "id": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "date"
                    },
                    "updated_at": {
                      "type": "date"
                    }
                  },
                  "example": {
                    "admin": false,
                    "id": "74dc0f41-9c96-4565-a0bb-32f285f71c26",
                    "name": "some name",
                    "email": "example@swagger.com",
                    "created_at": "2021-11-09T03:27:48.545Z",
                    "updated_at": "2021-11-09T03:27:48.545Z"
                  }
                }
              }
            }
          },
          "400": {
            "description": "User does not exists"
          }
        }
      }
    }
  }
}